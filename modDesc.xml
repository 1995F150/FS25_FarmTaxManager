<?xml version="1.0" encoding="utf-8"?>
<modDesc descVersion="90">
    <author>Jessie Crider (CriderGPT)</author>
    <version>1.0.0.0</version>

    <!-- Localized Title & Description -->
    <title>$l10n_mod_title</title>
    <description>$l10n_mod_description</description>

    <!-- Mod Icon (shown in Mods & DLC Menu) -->
    <iconFilename>modIcon.dds</iconFilename>

    <!-- Multiplayer support -->
    <multiplayer supported="true"/>

    <!-- Category so it shows under Gameplay Mods -->
    <category>gameplay</category>

    <!-- LUA Script -->
    <extraSourceFiles>
        <sourceFile filename="FarmTaxManager.lua"/>
    </extraSourceFiles>

    <!-- Localization -->
    <l10n filename="l10n/l10n_en.xml"/>

    <!-- Branding -->
    <brands>
        <brand name="CriderGPT"/>
    </brands>

    <!-- Web Links (optional: clickable link in ModHub page) -->
    <webLinks>
        <webLink title="CriderGPT Official Site" url="https://cridergpt.lovable.app/"/>
    </webLinks>

    <!-- Store Data Section (this makes it appear in Mods & DLC) -->
    <storeData>
        <name>$l10n_mod_title</name>
        <specs>
            <spec name="Author" value="Jessie Crider (CriderGPT)"/>
            <spec name="Version" value="1.0.0.0"/>
            <spec name="Category" value="Gameplay"/>
        </specs>
    </storeData>
</modDesc>

